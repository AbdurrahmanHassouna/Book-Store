@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All Users";
}

@if (Model.Any())
{
    

    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                user Id : @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user</h5>
            </div>
            <div class="card-footer">
                <form method="post" asp-action="DeleteUser" asp-controller="Administration" asp-route-id ="@user.Id">
                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                    <button type="submit" onclick="return confirm('are you sure to delete @user.UserName ?')" class="btn btn-danger">
                        Delete
                    </button>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No users created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="Account" asp-action="Register">
                Create user
            </a>
        </div>
    </div>
}