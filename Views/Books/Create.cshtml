@model CreateBookViewModel

@{
    ViewData["Title"] = "Create Book";
}

<div class="container mt-4">

    <h2 class="mb-4 text-center rounded bg-primary text-light" style="padding:5px">Create a Book</h2>
    <form asp-action="Create" asp-controller="Books" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3 row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="Format" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="Format" class="form-select">
                    <option value="">Select Format</option>
                    <option value="Hardcover">Hardcover</option>
                    <option value="Paperback">Paperback</option>
                </select>
                <span asp-validation-for="Format" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="BookStar" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="BookStar" class="form-control" />
                <span asp-validation-for="BookStar" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="ISBN" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ISBN" class="form-control" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="Price" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="BookCoverFile" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="BookCoverFile" type="file" class="form-control" />
                <span asp-validation-for="BookCoverFile" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="CategoryId" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="form-select">
                    <option value="">Select Category</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="AuthorId" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="AuthorId" asp-items="ViewBag.AuthorId" class="form-select">
                    <option value="">Select Author</option>
                </select>
                <span asp-validation-for="AuthorId" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="PublicationYear" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="PublicationYear" type="date" class="form-control" />
                <span asp-validation-for="PublicationYear" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="QuantityInStock" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="QuantityInStock" class="form-control" />
                <span asp-validation-for="QuantityInStock" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="Description" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}