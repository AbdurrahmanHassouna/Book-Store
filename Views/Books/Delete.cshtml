@model AprilBookStore.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Delete Book</h1>
    <p class="lead">Are you sure you want to delete this book?</p>
    <div class="row">
        <div class="col-md-6 mb-4">
            <img asp-append-version="true" src="@Model.ImgPath" class="img-fluid rounded shadow" alt="@Model.Name" />
        </div>
        <div class="card shadow mb-4 col-md-6">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">
                        <label asp-for="Name"></label>
                    </dt>
                    <dd class="col-sm-8">
                        @Model.Name
                    </dd>
                    <dt class="col-sm-4">
                        <label asp-for="ISBN"></label>
                    </dt>
                    <dd class="col-sm-8">
                        @Model.ISBN
                    </dd>
                    <dt class="col-sm-4">
                        <label asp-for="Author.Name"></label>
                    </dt>
                    <dd class="col-sm-8">
                        @Model.Author.Name
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    <form method="post">
        @Html.AntiForgeryToken()
        <div class="d-flex justify-content-center mt-4">
            <button type="submit" class="btn btn-primary me-2">Delete Book</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
