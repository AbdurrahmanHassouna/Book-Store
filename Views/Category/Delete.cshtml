@model AprilBookStore.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IsVisible)</dt>
        <dd class="col-sm-10">@Model.IsVisible</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CreatedDate)</dt>
        <dd class="col-sm-10">@Model.CreatedDate.ToString("g")</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.UpdatedDate)</dt>
        <dd class="col-sm-10">@Model.UpdatedDate.ToString("g")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>