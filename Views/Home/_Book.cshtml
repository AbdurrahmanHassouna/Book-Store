    </div>
</div>
<script>
    $(document).ready(function () {
        $('.addToCartBtn').click(function () {
            var itemId = $(this).siblings('input').val();
            $.ajax({
                url: '@Url.Action("AddToCart", "Cart")',
                type: 'POST',
                data: { bookId: itemId },
                success: function (result) {
                    $('#cartItemCount').html(result);
                },
                error: function () {
                    alert("An error occurred.");
                }
            });
        });
    });
</script>



