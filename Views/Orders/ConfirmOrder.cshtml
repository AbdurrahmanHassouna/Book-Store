@model Order

@{
    ViewBag.Title = "Order Confirmation";
}

<div class="container mt-5">
    <h2 class="mb-4">Order Confirmed</h2>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Book</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.BookName</td>
                    <td>@item.Quantity</td>
                    <td>@((item.Price*item.Quantity).ToString("C"))</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <h4>Total Amount: @Model.OrderItems.Sum(n =>n.Price*n.Quantity).ToString("C")</h4>
    </div>

    <p class="mt-4">Thank you for your order!</p>
</div>
