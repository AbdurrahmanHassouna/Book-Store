@model Order

<h2>Order Details</h2>

<div>
    <h4>Order ID: @Model.OrderID</h4>
    <p>Order Date: @Model.OrderDate</p>
    <p>Order Amount: $@Model.TotalAmount</p>
    <h3>Order Items</h3>
    <table class="table">
        <tr>
            <th>Item ID</th>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
           
        </tr>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.BookName</td>
                <td>@item.Quantity</td>
                <td>@item.Price ||  per unit</td>
               
            </tr>
        }
    </table>
</div>
