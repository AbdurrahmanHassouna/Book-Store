@model IEnumerable<Order>

<h2>Orders</h2>
@if (Model.Count()==0)
{
    <h1>No Orders</h1>
}
else
{
    <table class="table">
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OrderID</td>
                <td>@item.OrderDate</td>
                <td>$@item.TotalAmount</td>

                <td>@Html.ActionLink("Details", "Details", new { id = item.OrderID })</td>
            </tr>
        }
    </table>
}