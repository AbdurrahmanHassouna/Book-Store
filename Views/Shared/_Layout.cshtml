@using AprilBookStore.DataAccess
@using Microsoft.AspNetCore.Hosting
@using Microsoft.AspNetCore.Mvc.ViewEngines
@inject SignInManager<ApplicationUser> signInManager
@inject IData data
@inject IWebHostEnvironment Environment
@inject ICompositeViewEngine Engine
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AprilBookStore</title>
    <link rel="icon" type="image/x-icon" href="/Assets/download.png"/>
    <environment include="Development">
        <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
        <link href="~/lib/bootstrap/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
        <link href="~/css/site.css" rel="stylesheet" />
        <link href="~/lib/jqueryui/themes/base/jquery-ui.css" rel="stylesheet" />
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
        <script src="~/lib/jqueryui/jquery-ui.js"></script>
    </environment>
    <environment exclude="Development">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid px-5">
                <div class="h2 px-3 text-light">B</div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Authors" asp-action="Index">Authors</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Category" asp-action="Index">Categories</a>
                        </li>

                        @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <li><a class="dropdown-item" asp-controller="Books" asp-action="Create">Add Book</a></li>
                                    <li><a class="dropdown-item" asp-controller="Orders" asp-action="Index">Orders</a></li>
                                    <li><a class="dropdown-item" asp-controller="Books" asp-action="Index">Manage Books</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Administration
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <li><a class="dropdown-item" asp-action="ListUsers" asp-controller="Administration">Users</a></li>
                                    <li><a class="dropdown-item" asp-action="ListRoles" asp-controller="Administration">Roles</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <partial name="_LoginPartial" />

                    <form class="d-flex" role="search" asp-controller="@(User.IsInRole("SuperAdmin") || User.IsInRole("Admin") ? "Books" : "Home")" asp-action="Index" method="post">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="Search" id="@(User.IsInRole("SuperAdmin") || User.IsInRole("Admin") ? "SearchAdmin" : "SearchHome")">
                        <button class="btn btn-outline-light" type="submit">Search</button>
                    </form>

                    @if (!((ViewContext.RouteData.Values["controller"]?.ToString() == "Cart") || (ViewContext.RouteData.Values["controller"]?.ToString() == "Orders") || !User.Identity.IsAuthenticated))
                    {
                        <a class="nav-link ms-3" href="~/Cart/Index">
                            <img src="~/Assets/icons8-cart-50.png" alt="Cart Icon" width="30" height="30" />
                            <span id="cartItemCount" class="position-relative translate-middle badge rounded-pill bg-danger">
                                @await Html.PartialAsync("_CartCount", await data.GetCartItemsCountAsync(User))
                            </span>
                        </a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-shrink-0">
        <div class="container-xxl my-4">
            <partial name="_CookieConsentPartial" optional />
            @RenderBody()
        </div>
    </main>

    <footer class="footer py-1 bg-light">
        <div class="container">
            <span class="text-muted">&copy; 2024 - AprilBookStore</span>
            @{
                var foundPrivacy = Url.Page("/Privacy", new { area = "" });
            }
            @if (foundPrivacy != null)
            {
                <a class="text-muted ms-2" asp-area="" asp-page="/Privacy">Privacy</a>
            }
        </div>
    </footer>
    <environment exclude="Development">
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"
                integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
                crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
                crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"
                integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU="
                crossorigin="anonymous"></script>
    </environment>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(function () {
            $("#SearchHome, #SearchAdmin , #SearchManage").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '@Url.Action("AutoComplete", User.IsInRole("SuperAdmin") || User.IsInRole("Admin") ? "Books" : "Home")',
                        data: { term: request.term },
                        dataType: "json",
                        success: function (data) {
                            response(data);
                        }
                    });
                }
            });
        });
    </script>
</body>
</html>